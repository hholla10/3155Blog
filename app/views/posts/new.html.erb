<%content_for :page_title, "New Pizza Discussion" %>
<h1 class="title"> Topping Suggestion</h1>

<div class="section">
    <%= simple_form_for @post do |f| %>
    <div class="field">
        <div class="control">
            <%= f.input :title, input_html: { class: "input" }, wrapper:false, label_html: {class:'label'} %>
            
        </div>
    </div>
    <% end %>
</div>
<div class="field">
    <%= simple_form_for @post do |f| %>
    <div class="field">
        <div class="control">
            <%= f.input :content, input_html: { class: "textarea" }, wrapper:false, label_html: {class:'label'} %>
            
        </div>
    </div>
    <%= f.button :submit, 'Post Pizza Topic', class: "button is-danger" %>
    <% end %>
</div>